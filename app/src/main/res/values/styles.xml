<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="phoneStatusViewStyle">@style/DefaultStatusCardStyle</item>
        <item name="appStatusViewStyle">@style/DefaultStatusCardStyle</item>
        <item name="statisticsViewStyle">@style/DefaultStatusCardStyle</item>
    </style>

    <style name="DefaultStatusCardStyle">
        <item name="android:padding">5dp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="contentPadding">16dp</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">8dp</item>
    </style>

</resources>
