<?xml version="1.0" encoding="utf-8"?>
<no.uio.ifi.akosp.noisemapper.ui.SmartScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/smartScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="no.uio.ifi.akosp.noisemapper.ui.AnalyticsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <no.uio.ifi.akosp.noisemapper.ui.AnalyticsParamsView
            android:id="@+id/analyticsParamsView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/activity_horizontal_margin"/>

        <no.uio.ifi.akosp.noisemapper.ui.MapCardView
            android:id="@+id/mapCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/activity_horizontal_margin"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recordsList"
            android:layout_width="match_parent"
            android:layout_height="500dp"/>

    </LinearLayout>
</no.uio.ifi.akosp.noisemapper.ui.SmartScrollView>
